#!/bin/sh
# postinst script for puppet-git-receiver
#
# see: dh_installdeb(1)

set -e

PGRHOME=/var/lib/puppet-git-receiver
PGRUSER=puppet-git
# see: # http://askubuntu.com/questions/43317/what-is-the-difference-between-the-sudo-and-admin-group
# perfer sudo group if it has users in it
PGRGROUP=$(awk -F: '$4 && $1 == "sudo" { print $1 }' /etc/group)
# if not, prefer admin group if it has users in it
[ -z $PGRGROUP ] && PGRGROUP=$(awk -F: '$4 && $1 == "admin" { print $1 }' /etc/group)
# if not, prefer sudo group if it exists
[ -z $PGRGROUP ] && PGRGROUP=$(grep -o "^sudo" /etc/group)
# if not, prefer admin group if it exists
[ -z $PGRGROUP ] && PGRGROUP=$(grep -o "^admin" /etc/group)
# if not, give up and create our own group
[ -z $PGRGROUP ] && PGRGROUP=$PGRUSER
REPOPATH="$PGRHOME/puppet.git"
# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        adduser \
            --system \
            --quiet \
            --home "$PGRHOME" \
            --no-create-home \
            --disabled-password \
            --shell /usr/bin/git-shell \
            --group "$PGRUSER"
        umask 0007
        chmod 750 $PGRHOME
        chown $PGRUSER.$PGRGROUP $PGRHOME
        mkdir -p $REPOPATH
        chmod 2770 $REPOPATH
        HOOKSPATH=$REPOPATH/hooks/
        if [ ! -d "$HOOKSPATH" ] ; then
            GIT_DIR=$REPOPATH git init --bare
        fi
        chown -R $PGRUSER.$PGRGROUP $REPOPATH

        ln -fns /usr/lib/puppet-git/puppet-git-receiver-update-hook $HOOKSPATH/update

        ln -snf $REPOPATH /var/lib/puppet-git-receiver.git

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
